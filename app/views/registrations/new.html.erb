<% if flash[:errors] %>
  <% flash[:errors].full_messages.each do |error_message| %>
    <%= error_message %>
  <% end %>
<% end %>

<%= form_for(@user, url: registrations_path) do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit "Register Account" %>

<% end %>